<h1>Menu</h1>

<div class="btn-group">

  <% @sections.each do |section| %>
    <%= link_to section.name, menu_path(section_id: section.id), class: "btn #{params[:section_id] == section.id.to_s ? 'btn-primary' : 'btn-secondary'}" %>
  <% end %>

</div>


<% if @current_section %>
  <table class="table">
    <thead>
      <tr>
        <th>Name:</th>
        <th>Price</th>
        <th>Image</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @current_section.food_items.each do | item | %>
        <tr>
          <td><%= item.name %></td>
          <td><%= number_to_currency item.price%></td>
          <td><%= image_tag item.image_url %></td>
          <td><%= link_to 'Add to order', new_order_path(food_item_id: item.id) %></td>
         
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
